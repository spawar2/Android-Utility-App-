<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.gsu.final_project_sp.MainActivity">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_red_dark">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>


        <ImageButton

            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:id="@+id/activityswitch"
            android:layout_marginRight="12dp"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/holo_red_dark">




    </LinearLayout>

    <RelativeLayout
        android:layout_above="@id/tool_bar"
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawerLayout">

            <android.support.design.widget.NavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu="@menu/navigation_menu"
                android:layout_gravity="start"
                >

            </android.support.design.widget.NavigationView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">
                <!--    <Button
                    android:id="@+id/main_timer_bt"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:text="Timer"
                    android:textAllCaps="false"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    />
-->
                <Button
                    android:id="@+id/main_timer_bt_2"

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Animation"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/main_timer_bt_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/main_timer_bt_2"
                    android:background="@color/colorPrimaryDark"
                    android:text="Animator"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/muzic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/main_timer_bt_3"
                    android:background="@color/colorPrimaryDark"
                    android:text="Play"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/custdialog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/muzic"
                    android:background="@color/colorPrimaryDark"
                    android:text="Dialog"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/main_timer_bt_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/custdialog"
                    android:background="@color/colorPrimaryDark"
                    android:text="Interface"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/main_timer_bt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/main_timer_bt_4"
                    android:background="@color/colorPrimaryDark"
                    android:text="Timer"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/todo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/main_timer_bt"
                    android:background="@color/colorPrimaryDark"
                    android:text="To do list"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_timer_bt"
                    android:background="@color/colorPrimaryDark"
                    android:text="Calculator"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_timer_bt"
                    android:layout_toRightOf="@id/bt1"
                    android:background="@color/colorPrimaryDark"
                    android:text="Photos"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/id_bt3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_timer_bt"
                    android:layout_toRightOf="@id/bt2"
                    android:background="@color/colorPrimaryDark"
                    android:text="ListView"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/id_bt101"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_timer_bt"
                    android:layout_toRightOf="@id/id_bt3"
                    android:background="@color/colorPrimaryDark"
                    android:text="StepCount"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/id_bt102"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_timer_bt"
                    android:layout_toRightOf="@id/id_bt101"
                    android:background="@color/colorPrimaryDark"
                    android:text="Drinkgame"
                    android:textAllCaps="false"
                    android:textSize="10sp" />


                <Button
                    android:id="@+id/id_bt103"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/main_timer_bt"
                    android:layout_toRightOf="@id/id_bt102"
                    android:background="@color/colorPrimaryDark"
                    android:text="OneMemo"
                    android:textAllCaps="false"
                    android:textSize="10sp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/VIEW_PAGER"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/bt1"
                    android:background="@color/colorPrimary"></android.support.v4.view.ViewPager>

            </RelativeLayout>

        </android.support.v4.widget.DrawerLayout>

    </RelativeLayout>

</RelativeLayout>
